@model StoredProcedureAPI.Models.StoredProcedureViewModel

@{
    ViewData["Title"] = "Stored Procedure Details";
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-white">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="mb-0">
                    <i class="bi bi-code-square text-primary me-2"></i>
                    @Model.Name
                </h3>
                <span class="badge bg-@(Model.IsVisible ? "success" : "secondary")">
                    @(Model.IsVisible ? "Visible" : "Hidden")
                </span>
            </div>
        </div>
        <div class="card-body">
            @if (Model.Parameters?.Any() == true)
            {
                <h5 class="card-title mb-3">Parameters</h5>
                <div class="table-responsive">
                    <table class="table table-sm">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Data Type</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var param in Model.Parameters)
                            {
                                <tr>
                                    <td>@param.Name</td>
                                    <td><code>@param.DataType</code></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <h5 class="card-title mt-4">Description</h5>
                <p class="card-text">@Model.Description</p>
            }
        </div>
        <div class="card-footer bg-white">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>