@model StoredProcedureAPI.Models.LoginModel

@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="row g-0">
        <div class="col-md-6" style="border-right: 1px solid #e0e0e0;">
            <div class="login-form-container" style="background: white; box-shadow: none;">
                <div class="login-form-inner" style="padding: 3rem;">
                    <div class="form-header">
                        <h2 style="color: #242424; font-size: 24px; margin-bottom: 2rem;">Welcome Back!</h2>
                    </div>
                    <form asp-action="Login" method="post" class="animated-form">
                        <div class="form-group">
                            <input asp-for="Email" class="form-control input-animated" placeholder="Email or Username" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" type="password" class="form-control input-animated" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-end mb-3">
                            <a href="#" class="forgot-password" style="color: #242424;">Forgot Password?</a>
                        </div>
                        <button type="submit" class="btn btn-login" style="background-color: #242424;">SIGN IN</button>
                        <div class="text-center mt-4">
                            <span class="text-muted">New here? </span>
                            <a href="#" style="color: #242424; text-decoration: none;">Create Account</a>
                        </div>
                    </form>
                </div>
                <div class="text-center mt-5">
                    <small class="text-muted">Copyright Â© 2023. All Rights Reserved.</small>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <img src="/images/bg/api.jpg" class="img-fluid h-100 w-100" style="object-fit: cover;" alt="Background">
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}