<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stored Procedure Manager</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .navbar {
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .table {
            background-color: white;
        }
        
        /* New styles for code-block appearance */
        .code-block {
            background-color: #282c34;
            border-radius: 6px;
            padding: 1rem;
            color: #abb2bf;
            font-family: 'Consolas', 'Monaco', monospace;
        }
        
        .code-block h6 {
            color: #ffffff;
            border-bottom: 1px solid #3e4451;
            padding-bottom: 0.5rem;
            margin-bottom: 1rem;
        }
        
        .parameter-tree {
            padding-left: 1rem;
        }
        
        .parameter-item {
            margin-bottom: 0.75rem;
            display: flex;
            align-items: center;
        }
        
        .param-name {
            color: #e06c75;
            margin-right: 0.5rem;
        }
        
        .param-type {
            color: #61afef;
        }
        
        .param-icon {
            color: #98c379;
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary mb-4">
        <div class="container">
            <span class="navbar-text text-white fw-bolder fs-3">
                AXION-ETHIOPIA
            </span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="navbarNav">
                <ul class="navbar-nav me-auto">
                    
                </ul>
                
                <div class="navbar-brand">
                    <i class="bi bi-database"></i>
                    Stored Procedure API Endpoints
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container text-center py-3">
            &copy; @DateTime.Now.Year - Stored Procedure API
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>